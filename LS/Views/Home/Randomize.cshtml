@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Randomize</title>
    <script type="text/javascript" src="/Scripts/jquery-1.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setInterval(function () {
                $('#report').html('Randomizing...');
                $.get('/Services/Web.svc/Randomize').done(function () { $('#report').html('Success!'); }).fail(function () { $('#report').html('Error!'); });
            }, 2000);
        });
    </script>
    <style type="text/css">
        #report 
        {
            position: fixed;
            width: 500px;
            height: 100px;
            left: 50%;
            top: 50%;
            margin-left: -250px;
            margin-top: -50px;
            font: bold 50px Verdana;
            text-align: center;
            color: #c0c0c0;
        }
    </style>
</head>
<body>
    <div id="report"></div>
</body>
</html>
